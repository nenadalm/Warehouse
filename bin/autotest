#!/usr/bin/env bash

cd "$(dirname "${0}")/.."

TEST_ARGS="$@"
MESSAGE_EXPIRATION=60000 # 1 minute

function run_tests {
    lein cljsbuild test && notify-send -t "${MESSAGE_EXPIRATION}" -u low "Tests passed" || notify-send -t "${MESSAGE_EXPIRATION}" -u critical "Tests failed"
}

run_tests
while true; do
  if inotifywait -r -e modify src/ test/ | grep -P '(\.clj|\.cljs)'; then
      run_tests
  fi
done

