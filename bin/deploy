#!/usr/bin/env bash

set -eu

SOURCE_BRANCH=master
TARGET_BRANCH=gh-pages

if [[ "${TRAVIS_PULL_REQUEST}" != "false" or "${TRAVIS_BRANCH}" != "${SOURCE_BRANCH}" ]]; then
    printf "Current branch is not master. Skipping deploy...\n"
    exit 0
fi

lein clean
lein less once
lein cljsbuild once min

git status
pwd

